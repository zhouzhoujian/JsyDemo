<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="horizontal"
            android:padding="@dimen/common_10dp">

            <ImageView
                android:id="@+id/speed_loan_detailsList_image"
                android:layout_width="@dimen/common_40dp"
                android:layout_height="@dimen/common_40dp"
                android:src="@mipmap/ic_feedback_camera" />

            <cn.jishiyu11.xjsjd.control.MyTextView
                android:id="@+id/speed_loan_detailsList_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/common_10dp"
                android:layout_weight="1"
                android:text="@string/name_loan_credit_no_taobao"
                android:textColor="@color/common_brown_text"
                android:textSize="@dimen/common_14dp" />

            <ImageView
                android:layout_width="@dimen/common_20dp"
                android:layout_height="@dimen/common_20dp"
                android:src="@drawable/bg_personal_right_selector" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/common_70dp">

            <LinearLayout
                android:id="@+id/speed_loan_list_item_tag_2"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/common_32dp"
                android:layout_marginRight="@dimen/common_8dp"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/speed_loan_list_item_tag_image_2"
                    android:layout_width="@dimen/common_30dp"
                    android:layout_height="@dimen/common_32dp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/speed_loan_list_item_tag_1"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/common_32dp"
                android:orientation="horizontal"
                android:gravity="center"
                >

                <ImageView
                    android:id="@+id/speed_loan_list_item_tag_image_1"
                    android:layout_width="@dimen/common_30dp"
                    android:layout_height="@dimen/common_32dp" />

            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/common_Blue"
            android:orientation="horizontal"
            android:padding="@dimen/common_5dp">

            <cn.jishiyu11.xjsjd.control.MyTextView
                android:id="@+id/speed_loan_detailsList_text"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/common_5dp"
                android:layout_weight="1"
                android:text="@string/name_loan_credit_no_taobao"
                android:textColor="@color/black"
                android:textSize="@dimen/common_12dp" />

            <cn.jishiyu11.xjsjd.control.MyTextView
                android:id="@+id/speed_loan_detailsList_rate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/common_5dp"
                android:text="@string/name_loan_credit_no_taobao"
                android:textColor="@color/common_basic_red"
                android:textSize="@dimen/common_12dp" />

        </LinearLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/common_8dp"
        android:background="@color/common_light_grey" />

</LinearLayout>
