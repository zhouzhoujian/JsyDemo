<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/common_light_grey"
    android:orientation="vertical">

    <include
        layout="@layout/tab_activity_fra"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <ImageView
            android:layout_width="@dimen/common_80dp"
            android:layout_height="@dimen/common_80dp"
            android:layout_marginTop="@dimen/common_50dp"
            android:src="@mipmap/ic_launcher" />

        <cn.jishiyu11.xjsjd.control.MyTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/common_15dp"
            android:layout_marginRight="@dimen/common_15dp"
            android:layout_marginTop="@dimen/common_50dp"
            android:text="@string/name_loan_set_up_about_text"
            android:textColor="@color/common_loan_personal"
            android:textSize="@dimen/common_16dp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerInParent="true"
                android:layout_marginBottom="@dimen/common_20dp"
                android:src="@mipmap/ic_set_up_about" />

        </RelativeLayout>


    </LinearLayout>


</LinearLayout>
